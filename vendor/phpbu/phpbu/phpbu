// check installation [composer default, composer bin, git clone]
foreach (array(__DIR__ . '/../../autoload.php', __DIR__ . '/../autoload.php', __DIR__ . '/vendor/autoload.php') as $file) {
    if (file_exists($file)) {
        define('PHPBU_COMPOSER_AUTOLOAD', $file);
    }
}
unset($file);

if (!defined('PHPBU_COMPOSER_AUTOLOAD')) {
    fwrite(STDERR,
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'wget http://getcomposer.org/composer.phar' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    exit(1);
}

require PHPBU_COMPOSER_AUTOLOAD;

phpbu\App\Cmd::main();
